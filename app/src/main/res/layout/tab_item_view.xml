<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_item_bg"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/tab_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="32dp"
        android:maxHeight="32dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tab_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tab_item_icon"
        android:gravity="center"
        android:lines="1"
        android:textSize="9sp"
        tools:text="菜单" />


    <TextView
        android:id="@+id/tab_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tab_item_icon"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-8dp"
        android:background="@drawable/tab_item_msg_bg"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone"
        tools:text="99+" />

    <View
        android:id="@+id/tab_item_msg"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/tab_item_icon"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-8dp"
        android:background="@drawable/tab_item_msg_bg"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone" />
</RelativeLayout>